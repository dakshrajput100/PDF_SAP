<mvc:View
	controllerName="project2.controller.View1"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">

	<Page>

		<content>
			<Panel
				headerText="PlanMember Information"
				expandable="true"
				expanded="true"
				width="auto"
				class="sapUiNoContentPadding sapUiNoMargin">

				<VBox fitContainer="true" class="sapUiSmallMargin">
					<l:BlockLayout background="Dashboard">
						<l:BlockLayoutRow>

							<l:BlockLayoutCell
								backgroundColorSet="ColorSet11"
								backgroundColorShade="ShadeD"
								width="50%">

								<f:SimpleForm
									layout="ResponsiveGridLayout"
									columnsXL="1"
									columnsL="1"
									columnsM="1">

									<Label text="Test"   class = "sapUiSmallMarginTop" design="Bold" />
									<TextArea
										value="{objectView>/Test}"
										rows="2"
										width="100%" />
								</f:SimpleForm>

							</l:BlockLayoutCell>
						</l:BlockLayoutRow>
					</l:BlockLayout>
				</VBox>

			</Panel>
		</content>

		<footer>
			<OverflowToolbar>
				<ToolbarSpacer />

				<Button
					text="Download Pdf without handling special character"
					icon="sap-icon://save"
				
					press="onPressPdfSunLifeForm"
			/>
			<Button
					text="Download Pdf with handling special character"
					icon="sap-icon://save"
				
					press="onPressPdfSunLifeForm1"
			/>
			</OverflowToolbar>
		</footer>

	</Page>

</mvc:View>
